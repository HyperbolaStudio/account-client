<header class="title-bar">
    <div class="left-bar">
        <div class="logo-block">
            <img class="logo-img" src="<%= titleBar.logoSrc%>">
        </div>
        <h1><%= titleBar.title%></h1>
        <nav class="main-nav">
            <ul class="main-nav-ul">
                <%for(let x of titleBar.navItems){%>
                    <li>
                        <a class="list" href="<%= x.href%>"><%= x.innerText%></a>
                    </li>
                <%}%>
            </ul>
        </nav>
    </div>
    <div class="right-bar">
        <nav class="button-nav">
            <% if(!isLoggedIn){%>
                <div class="users-part">
                    <div id="register"><a class="button" href="/register">注册</a></div>
                    <div id="login"><a class="button" href="/login">登录</a></div>
                </div>
            <%}else{%>
                <div class="loggedin-user-part">
                    <%- include('user_inf',{userInf:userInf}); %>
                    <div id="logout"><a class="button">退出登录</a></div>
                </div>
            <%}%>
        </nav>
    </div>
</header>